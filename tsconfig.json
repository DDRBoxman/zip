{
	"compilerOptions": {
		"declaration": true,
		"outDir": "./dist",
		"lib": ["es2020", "DOM"],
		"removeComments": true,
		"target": "es2020",
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"verbatimModuleSyntax": true,
	},
	"include": [
		"./src"
	],
	"exclude": [
		"**/*.test.ts"
	]
}